<h1> Edit your Restaurant </h1>
<%= form_for @restaurant do |f|%>
<div class='span6 align-left'>
	<p>
		Name*
	</p>
	<p>
		<%=f.text_field :name,value: @restaurant.name,:class=>'form-control fixed-width-field'%>
	</p>
	<p>
		description*
	</p>
	<p>
		<%=f.text_area :description,value: @restaurant.description,:rows=>'3', :class=>'form-control fixed-width-field'%>
	</p>
	<p>
		adress*
	</p>
	<p>
		<%=f.text_field :street,value: @restaurant.street, :class=>'form-control fixed-width-field'%>
	</p>
	<p>
		<%=f.text_field :city,value: @restaurant.city, :class=>'form-control fixed-width-field'%>
	</p>
	<p>
		<%=f.text_field :state,value: @restaurant.state, :class=>'form-control fixed-width-field'%>
	</p>
	<p>
		<%=f.text_field :zip,value: @restaurant.zip, :class=>'form-control fixed-width-field'%>
	</p>
	<p>
		phone*
	</p>
		<p>
		<%=f.text_field :phone,placeholder: '123-867-5309', :class=>'form-control fixed-width-field'%>
	</p>

	<p>
	<%=submit_tag 'submit', :class => 'btn btn-primary btn-large'%>
	</p>
</div>
<%end%>